---
export const prerender = true;
import { getCollection } from "astro:content";
import MainLayout from "@layouts/main.astro";
import Header from "@components/Header.astro";
import { formatDate } from "@lib/format-date";

export async function getStaticPaths() {
  const allResearch = await getCollection("research");

  return allResearch.map((research) => ({
    params: { slug: research.slug },
    props: { research },
  }));
}

const { research } = Astro.props;
const { Content } = await research.render();
---

<MainLayout
  title={research.data.title}
  description={research.body.slice(0, 120) + "..."}
>
  <Header content={research.data.title} />
  <p class="text-zinc-500 mb-5">
    Anav Chand â€¢ {formatDate(research.data.date)}
  </p>
  <Content />
</MainLayout>
