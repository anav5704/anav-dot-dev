---
import { Image } from "astro:assets";
import smallOne from "../images/short1.jpg";
import tallOne from "../images/anav.webp";
import smallTwo from "../images/short2.jpg";
import tallTwo from "../images/tall1.jpg";
import smallThree from "../images/short3.jpg";
import tallThree from "../images/tall3.jpg";
---

<section class="grid grid-cols-2 md:grid-cols-3 grid-rows-3 gap-5">
  <Image
    src={smallOne}
    alt="img"
    width={500}
    height={500}
    format="webp"
    loading="eager"
    class="hero-image hidden md:block md:h-40"
  />
  <Image
    src={tallOne}
    alt="img"
    width={500}
    height={500}
    format="webp"
    loading="eager"
    class="hero-image row-span-2"
  />
  <Image
    src={smallTwo}
    alt="img"
    width={500}
    height={500}
    format="webp"
    loading="eager"
    class="hero-image md:h-40"
  />
  <Image
    src={tallTwo}
    alt="img"
    width={500}
    height={500}
    format="webp"
    loading="eager"
    class="hero-image row-span-2"
  />
  <Image
    src={tallThree}
    alt="img"
    width={500}
    height={500}
    format="webp"
    loading="eager"
    class="hero-image hidden md:block md:row-span-2"
  />
  <Image
    src={smallThree}
    alt="img"
    width={500}
    height={500}
    format="webp"
    loading="eager"
    class="hero-image md:h-40"
  />
</section>
